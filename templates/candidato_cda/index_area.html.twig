{% extends 'candidato_cda/index.html.twig' %}

{% block title %}CandidatoCda index{% endblock %}

{% block contentRight %}
    <h1 class="text-center">Candidatos Comisión Dictaminadora en el Área de <br /> {{ area.nombre }}</h1>
    <br />
    <table class="table table-sm table-hover table-striped text-center"> 
        <thead class="bg-dark text-white">
            <tr>
                <th>Candidato</th>
                <th>Unidad</th>
               {# <th>División</th> #}
                {# % if area.id < 8 % #}
                    <th>Disciplina</th>
                {# % endif % #}
                {# <th>Sexo</th> #}
            </tr>
        </thead>
        <tbody>
        {% for candidato_cda in candidatosCda %}
            <tr class="">
                <td>{{ candidato_cda.nombre }}</td>
                <td>{{ candidato_cda.nombreUnidad }}</td>
                {# <td>{{ candidato_cda.nombreDivision  }}</td> #}
                {# % if area.id < 8 % #}
                    <td>{{ candidato_cda.nombreDisciplina }}</td>
                {# % endif %#}
                {# <td>{{ candidato_cda.genero }}</td> #}
            </tr>
        {% else %}
            <tr>
                <td colspan="30">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
